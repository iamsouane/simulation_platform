<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<ScrollPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.simulation_platform.controllers.CreerTPSimulationChimieController" fitToWidth="true">
    <content>
        <VBox spacing="10" alignment="CENTER" prefWidth="800.0" prefHeight="600.0">
            <children>
                <Label text="Créer TP Simulation Chimie" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <TextField fx:id="champTitre" promptText="Titre"/>
                <TextArea fx:id="champDetails" promptText="Détails"/>
                <ComboBox fx:id="comboSolution" promptText="Choisissez une solution">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Eau distillée (neutre)"/>
                            <String fx:value="Vinaigre (acide)"/>
                            <String fx:value="Eau savonneuse (basique)"/>
                            <String fx:value="Jus de citron (acide)"/>
                            <String fx:value="Bicarbonate de soude (basique)"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <ComboBox fx:id="comboIndicateur" promptText="Choisissez un indicateur">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Phénolphtaléine"/>
                            <String fx:value="Bleu de bromothymol"/>
                            <String fx:value="Jus de chou rouge"/>
                            <String fx:value="Rouge de méthyle"/>
                        </FXCollections>
                    </items>
                </ComboBox>
                <Button text="Démarrer Simulation" onAction="#handleDemarrerSimulation"/>
                <StackPane fx:id="stackPaneSimulation" prefWidth="800.0" prefHeight="600.0"/>
                <Label fx:id="labelResultat" text="Résultat" style="-fx-font-size: 14px;"/>
                <Button text="Retour" onAction="#handleRetour"/>
            </children>
        </VBox>
    </content>
</ScrollPane>
