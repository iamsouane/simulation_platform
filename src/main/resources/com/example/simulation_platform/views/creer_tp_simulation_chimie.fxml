<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.simulation_platform.controllers.CreerTPSimulationChimieController" spacing="10" alignment="CENTER">
    <children>
        <Label text="Créer TP Simulation Chimie"/>
        <TextField fx:id="titreField" promptText="Titre"/>
        <TextField fx:id="detailsField" promptText="Détails"/>
        <ComboBox fx:id="solutionComboBox" promptText="Choisir une solution"/>
        <ComboBox fx:id="indicateurComboBox" promptText="Choisir un indicateur"/> <!-- Ajout de la ComboBox -->
        <Button text="Créer Simulation Chimie" onAction="#handleCreer"/>

        <!-- Conteneur pour la simulation 3D -->
        <StackPane fx:id="simulationContainer" prefWidth="600" prefHeight="600" />
    </children>
</VBox>
